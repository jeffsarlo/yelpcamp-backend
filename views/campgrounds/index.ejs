<% include ../partials/header %>

<header class="jumbotron">
    <div class="container">
        <h1><i class="fas fa-campground"></i> Welcome to Yelp Camp!</h1>
        <p>View our hand-picked campgrounds from all over the World</p>
        <p>
            <a class="btn btn-primary btn-lg" href="campgrounds/new">Add New Campground</a>
        </p>
        <p>
            <form action="/campgrounds" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="campground search ..." class="form-control">
                    <button type="submit" class="btn btn-secondary btn-sm">Search</button>
                </div>
            </form>
        </p>
    </div>
</header>

<!-- NoMatch search box message-->
<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <div class="col-md-12">
        <% if (noMatch !== undefined) { %>
            <h3><%= noMatch %></h3>
        <% } %>
    </div>
    <!-- Campground Cards -->
    <% campgrounds.forEach(function(campground) { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
                <img class="cardImage" style="height: 15rem;" src="<%= campground.image %>" class="<%= campground.name %>" alt="<%= campground.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        </div>
<% }); %>
</div>
    

<% include ../partials/footer %>